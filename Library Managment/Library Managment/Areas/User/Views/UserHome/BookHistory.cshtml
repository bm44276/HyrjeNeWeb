@model List<Library_Managment.Areas.User.Models.TakenBooks>;


<div class="wrapper" style=" padding: 30px; text-align: center; margin: 10px;">
    <h1>My Book History</h1>

    <table class="table table-light table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Photo</th>
                <th scope="col">TITLE</th>
                <th scope="col">AUTHOR</th>
                <th scope="col">Taken Date</th>
                <th scope="col">Return Date</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model) {
                <tr>
                    <th scope="row">
                        <a asp-area="User" asp-controller="UserHome" asp-action="BookDetails" asp-route-id="@book.Id">
                            <img alt="images/book1" style=" width: 50px; height: 70px;" class="img-responsive center-block" src="~/BookImages/@book.Image">
                        </a>
                    </th>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.TakenDate</td>
                    <td>@book.ReturnDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>

