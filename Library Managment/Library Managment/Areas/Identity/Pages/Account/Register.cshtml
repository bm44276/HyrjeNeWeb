@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_NewLayout";
}
<div style="height:1080px;">
    <div class="container-fluid">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <br />

        <div class="row">
            <div class="col-md text-black">
                <p class="par">"I have always imagined that Paradise <br> will be a kind of a Library." <br /> - Jorge Luise Borges</p>
            </div>

            <div class="col-md">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Create a new account.</h4>
                    <br />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input style="max-width: 600px" asp-for="Input.Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Surname"></label>
                        <input style="max-width: 600px" asp-for="Input.Surname" class="form-control" placeholder="Surname" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Occupation"></label>
                        <input style="max-width: 600px" asp-for="Input.Occupation" class="form-control" placeholder="Job/School" />
                        <span asp-validation-for="Input.Occupation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input style="max-width: 600px" asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input style="max-width: 600px" asp-for="Input.Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input style="max-width: 600px" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>

        </div>
        <br />
        <br />
        <br />
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
